/* Adding Animation */
@keyframes moveinright {
  0% {
    opacity: 0;
    transform: translate(-100px);
  }

  80% {
    transform: translate(10px);
  }

  100% {
    opacity: 1;
    transform: translate(0);
  }
}

@keyframes moveinleft {
  0% {
    opacity: 0;
    transform: translate(100px);
  }

  80% {
    /* move to the right and comeback */
    transform: translate(-20px);
  }

  100% {
    opacity: 1;
    transform: translate(0);
  }
}
